<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/header_container"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="270dp"
            android:layout_below="@id/home_profile"
            android:layout_height="wrap_content"
            android:text="Your Last
            Calculated BMI"
            android:textSize="30dp"
            android:id="@+id/home_title"
            android:textStyle="bold" />
        <ImageButton
            android:id="@+id/home_profile"
            android:layout_width="70dp"
            android:background="@color/white"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/user" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/last_bmi_container"
        android:layout_below="@id/header_container"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:layout_height="100dp"
        android:background="@drawable/normal_layout"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:background="@drawable/left_corner_bg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="30dp"
            android:paddingEnd="20dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/last_bmi_edit"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:text="25.1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="30dp"
                android:text="BMI"/>

        </LinearLayout>

        <TextView
            android:id="@+id/bmi_health"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:textSize="20dp"
            android:text="Healthy"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/last_bmi_container"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="20dp"
        android:text="Menu"
        android:textStyle="bold"
        android:textSize="40dp"
        android:id="@+id/menu_home_title"/>

    <LinearLayout
        android:id="@+id/first_row_menu"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/menu_home_title"
      >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center">
            <ImageButton
                android:id="@+id/calculator_icon"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@color/white"
                android:src="@drawable/calculator_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculator"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>
        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" >
        </Space>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:gravity="center">
            <ImageButton
                android:layout_width="120dp"
                android:id="@+id/history_icon"
                android:layout_height="120dp"
                android:background="@color/white"
                android:src="@drawable/history_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BMI History"
                android:textStyle="bold"
                android:textSize="20dp"/>
        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/first_row_menu"
        android:layout_width="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageButton
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/tips_icon"
            android:background="@color/white"
            android:src="@drawable/idea_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Healthy Tips"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>




</RelativeLayout>